@using Markdig

@model Masuit.MyBlogs.Core.Models.DTO.AdvertisementDto
@if (Model != null) {
  <div class="article-card">
    <div class="cover">
      <img alt="@Model.Title" class="lazyload thumb" decoding="async" loading="lazy" src="@(Model.ThumbImgUrl + "?width=280&format=webp&quality=50")" title="@Model.Title">
    </div>
    <div class="article-content">
      <a asp-action="Redirect" asp-controller="Advertisement" asp-route-id="@Model.Id" class="article-title" target="_blank">
        <i class="size18 text-red">[荐]</i>@Model.Title
      </a>
      <div class="summary"> @Html.Raw(Markdown.ToHtml(Model.Description)) </div>
    </div>
  </div>
}
