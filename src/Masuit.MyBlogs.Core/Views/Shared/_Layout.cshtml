@using Dispose.Scope
@{
  string[] colors = {
    "success",
    "info",
    "warning",
    "danger",
    "default"
  };
  var menus = MenuService.GetQueryNoTracking(m => m.Status == Status.Available, m => m.Sort).Cacheable().ToTree(m => m.Id, m => m.ParentId);
  var user = Context.Session.Get<UserInfoDto>(SessionKey.UserInfo) ?? new UserInfoDto();
  var links = LinksService.GetQuery(l => l.Status == Status.Available).OrderByDescending(l => l.Recommend).ThenByDescending(l => l.Loopbacks.GroupBy(x => x.IP).Count()).Take(30).Select(e => new {
    e.Url,
    e.Name
  }).Cacheable().ToPooledListScope();
}
